{
    "compilerOptions": {
        "removeComments": false,
        "noLib": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "declarationDir": "./types/radical-console",
        "declaration": true,
        "module": "umd",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017", "es2017.object"],
        "noResolve": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "./src/**/*",
        "./types/**/*.d.ts",
        "./gulpfile.ts"
    ],
    "compileOnSave": true
}
