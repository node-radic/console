{
    "compilerOptions": {
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017", "es2017.object"],
        "noResolve": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "exclude": [
        "./node_modules",
        "./build.ts",
        "./src/*.d.ts",
        "./lib",
        "./docs"
    ]
}
