{
    "compilerOptions": {
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017", "es2017.object"],
        "noResolve": false,
        "types": ["reflect-metadata"],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "./src",
        "./spec",
        "./gruntfile.ts",
        "./types"
    ]
}
