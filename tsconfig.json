{
    "compilerOptions": {
        "removeComments": false,
        "noLib": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "declarationDir": "./types/radical-console/src",
        "declaration": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017", "es2017.object"],
        "noResolve": false,
        "baseUrl": "./",
        "paths": {
            "radical-console": ["src/"],
            "modules": ["modules/"],
            "modules/*": ["modules/*/"]
        },

        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "./src/**/*",
        "./modules/**/*",
        "./gulpfile.ts"
    ],
    "exclude": [
        "./plugins",
        "./plugins/**/*.ts"
    ],
    "compileOnSave": true
}
